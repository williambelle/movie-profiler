extends layout

block content
	#page-wrapper
		.row
			.col-lg-12
				h1(class='page-header')
					| Dashboard
		.row
			.col-lg-12
				.panel.panel-default
					.panel-heading
						| All movies
					.panel-body
						.table-responsive
							table(class='table table-striped table-bordered table-hover', id='allMovies')
								thead
									tr
										th Title
										th.center Year
										th.center Duration
										th.center Rating
								tbody
									each item in table
										tr
											td= item.title
											td.center= item.year
											td.right= item.duration
												|  min
											td.center= item.rating